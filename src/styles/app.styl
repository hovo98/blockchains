:root
  // change for dark/light themes
  --tertiary hsl(288, 67%, 55%)
  --secondary hsl(217, 100%, 70%)
  --primary hsl(233, 96%, 65%)
  --primary-alt #46509F
  --link hsl(233, 96%, 65%)
  --hover #46509F
  --bright hsl(0, 100%, 0%)
  --txt hsla(0, 100%, 0%, 0.8)
  --dim hsla(0, 100%, 0%, 0.667)
  --bc hsla(233, 24%, 75%, 0.175)
  --bc-dim hsla(233, 24%, 75%, 0.0875)
  --app-fg hsl(220, 33%, 98%)
  --app-bg hsl(0, 0%, 100%)
  --app-nav hsl(233, 38%, 14%)
  --dark-fg hsl(233, 22%, 23%)
  --dark-bg #0B0C17
  --dark-txt hsl(0, 0%, 100%)
  --dark-dim hsl(0, 0%, 75%)
  // deprecated
  --input-bc hsla(233, 36%, 36%, 0.12)
  --input-bc-hover hsl(233, 100%, 70%)
  --input-bg hsl(233, 36%, 18%)
  // don't change
  --success hsl(120, 58%, 55%)
  --success-bc hsl(120, 58%, 41%)
  --warning hsl(35, 100%, 50%)
  --warning-bc hsl(35, 75%, 38%)
  --danger hsl(0, 100%, 55%)
  --danger-bc hsl(0, 100%, 41%)
  --tendermint #5EAD37
  --twitter #00acee
  // sizes
  --pad320 2rem
  --pad768 5.75rem
  --pad1280 8rem
  --pad1920 12rem
  --width-main 100%
  --width-side 16rem
  // z-index
  --z-modal-top 1002
  --z-modal-help 1001
  --z-modal 1000
  --z-toc 200
  --z-app-header 100
  --z-app-menu 99
  --z-tool-bar 98
  --z-list-item 10
  --z-default 1
  --z-zero 0
  --z-below -1
  // line-heights
  --lh-heading 1.25
  --lh-paragraph 1.5
  // tracking (i.e. letter-spacing)
  --tracking-2-wide 0.08em
  --tracking-1-wide 0.03em
  --tracking-0 0.02em
  --tracking-1-tight 0.01em
  --tracking-2-tight 0em
  // weights
  --fw-bold 700
  --fw-semibold 600
  --fw-regular 400
  --fw-light 200
  // fonts
  --ff-brand 'Metropolis', sans-serif
  // hotfix for tooltip__wrapper
  --white-100 #fff
  // ecosystem
  --sidebar-width 13rem

flex-version = flex
support-for-ie = false
vendor-prefixes = official

@import '../../node_modules/nib/index.styl'
@import './print.styl' print
@require './variables.styl'
@require './vendor/*'

global-reset()
reset-html5()

*
  box-sizing border-box
  outline 0

body
  // padding-top 4rem
  background var(--app-bg)
  -webkit-text-size-adjust 100%
  -webkit-font-smoothing antialiased
  text-rendering optimizeLegibility

a
  color var(--link)
  text-decoration none
  cursor pointer

  &:hover
    color var(--hover)

body, input, button, textarea
  font-size 1.125em
  font-weight var(--fw-regular)
  line-height var(--lh-paragraph)
  letter-spacing var(--tracking-1-wide)
  font-family var(--ff-brand)
  color var(--txt)

strong
  font-weight var(--fw-semibold)
  letter-spacing var(--tracking-0)

em
  font-style italic

.h1, .h2, .h3, .h4, .h5, .h6, .tm-content h1, .tm-content h2, .tm-content h3, .tm-content h4, .tm-content h5, .tm-content h6
  line-height var(--lh-heading)
  color var(--bright)
  font-family var(--ff-brand)

  &.material-icons
    font-family 'Material Icons'

  &:first-child
    margin-top 0

  &:last-child
    margin-bottom 0

.h1, .tm-content h1
  font-size 2.5rem
  line-height 1.16
  font-weight var(--fw-light)
  letter-spacing var(--tracking-1-tight)

.h2, .tm-content h2
  font-size h1
  color #2D2950
  font-weight var(--fw-semibold)
  letter-spacing var(--tracking-1-tight)

.h3, .tm-content h3
  color var(--hover)
  text-transform uppercase
  letter-spacing var(--tracking-2-wide)
  font-family var(--ff-brand)
  margin-bottom 1.5rem
  font-size 1rem
  font-weight var(--fw-bold)
  color #46509F

.h4, .tm-content h4
  font-size 1rem
  font-weight var(--fw-bold)
  color #90AFDC

.phone, .phone.tablet
  display block !important

.tablet, .laptop, .desktop
  display none !important

.slide-in
  animation slide-in 0.5s forwards

.slide-out
  animation slide-out 0.5s forwards

@keyframes slide-in
  100%
    transform translateX(0%)

@keyframes slide-out
  0%
    transform translateX(0%)

  100%
    transform translateX(-100%)

@media screen and (min-width: 768px)
  .phone
    display none !important

  .tablet
    display block !important

@media screen and (min-width: 1024px)
  .mobile-only
    display none !important

  .phone.tablet
    display none !important

  .tablet
    display none !important

  .laptop
    display block !important

@media screen and (min-width: 1920px)
  .laptop
    display none !important

  .desktop
    display block !important
